{{>header}}
    <br>
    <br>
    <br>
<center>
    <br>
        
        <div id= "Registrar" class= "row">
            <div class = "col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class= "card card-signin my-5">
                    <div class= "card-body">
                        <h5 class= "card-title text-center">Registro</h5>     
                        <form action="/crearL" method="post" enctype ="multipart/form-data">
                            <div class="form-label-group">
                                <label for="nombreL">Nombre del Libro</label>
                                <input type="text" name="nombreL" class="form-control" placeholder="Ingrese el Nombre del Libro" required autofocus>
                            </div>
                            <div class="form-label-group">
                                <label for="autor">Autor del Libro</label>
                                <input type="text" name="autor" class="form-control" placeholder="Ingrese el Nombre del Autor" required autofocus>
                                
                            </div>
                            <div class="form-label-group">
                                <label for="calificacion">Calificación</label>
                                <input type="number" name="calificacion" class="form-control" placeholder="Califique al Libro del 1 al 5" required autofocus>
                                
                            </div>
                            <div class="form-label-group">
                                <label for="descripcion">Descripción</label>
                                <input type="text" name="descripcion" class="form-control" placeholder="Escriba una Reseña." required>
                                
                            </div>
                            <div class="form-label-group">
                                <label>Foto de Portada</label>
                                <input type="file" name="archivo" class="form-control"  accept= "image/*" required>
                                
                            </div>
                            <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Crear Libro</button>
                            <hr class="my-4">
                        </form>
                    </div>
                </div>
            </div>
       
</center>
{{>footer}}